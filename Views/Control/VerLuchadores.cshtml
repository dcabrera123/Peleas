@model IEnumerable<Peleas.Models.Luchador>
    
<link rel="stylesheet" href="~/css/estilo.css" />





<h2>Luchadores</h2>

<form asp-controller="Control" asp-action="VerLuchadores">
    <p>
        Nombre: <input type="text" name="nombre">
        <input type="submit"  class="w3-button w3-light-green" value="Buscar" />
    </p>
    <p>
        Categoria: <input type="text" name="categoria">
        <input type="submit"  class="w3-button w3-light-green" value="Buscar" />
    </p>
    <p>
        Diciplina: <input type="text" name="diciplina">
        <input type="submit"  class="w3-button w3-light-green" value="Buscar" />
    </p>     
</form>
<br>


<table class="table" >
    <thead>
        <tr>
            <th> @Html.DisplayNameFor(model => model.ID)</th>
            <th> @Html.DisplayNameFor(model => model.Nombre)</th>
            <th> @Html.DisplayNameFor(model => model.Apellidos)</th>
            <th> @Html.DisplayNameFor(model => model.Categorias)</th>
            <th> @Html.DisplayNameFor(model => model.Diciplinas)</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.ID)</td>
            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
            <td>@Html.DisplayFor(modelItem => item.Apellidos)</td>
            <td>@Html.DisplayFor(modelItem => item.Categorias)</td>
            <td>@Html.DisplayFor(modelItem => item.Diciplinas)</td>

        </tr>
}
    </tbody>
</table>
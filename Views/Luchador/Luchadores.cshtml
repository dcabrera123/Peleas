@model IEnumerable<Peleas.Models.Luchador>
    
<link rel="stylesheet" href="~/css/estilo.css" />





<h2>Luchadores</h2>


<form asp-controller="Luchador" asp-action="Luchador">
    <p>
        Ingrese Nombre de Luchador: <input type="text" name="nombre">
        <input type="submit"   value="Ver Detalles" />
    </p>    
</form>
<br>

<br>


<table class="table" >
    <thead>
        <tr>
            <th> @Html.DisplayNameFor(model => model.ID)</th>
            <th> @Html.DisplayNameFor(model => model.Nombre)</th>
            <th> @Html.DisplayNameFor(model => model.Apellidos)</th>
            <th> @Html.DisplayNameFor(model => model.Categoria)</th>
            <th> @Html.DisplayNameFor(model => model.Diciplina)</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.ID)</td>
            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
            <td>@Html.DisplayFor(modelItem => item.Apellidos)</td>
            <td>@Html.DisplayFor(modelItem => item.Categoria)</td>
            <td>@Html.DisplayFor(modelItem => item.Diciplina)</td>

        </tr>
}
    </tbody>
</table>